<h1>Listing apartments</h1>

<table class="table">
  <thead>
    <tr>
      <th>Address</th>
      <th>Link</th>
      <th>Contact</th>
      <th>Price</th>
      <th>Hunt</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= apartment.address %></td>
        <td><%= apartment.link %></td>
        <td><%= apartment.contact %></td>
        <td><%= number_to_currency(apartment.price) %></td>
        <td><%= apartment.hunt.title %></td>
        <td><%= link_to 'Show', apartment %></td>
        <td><%= link_to 'Edit', edit_apartment_path(apartment) %></td>
        <td><%= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Apartment', new_hunt_apartment_path %>