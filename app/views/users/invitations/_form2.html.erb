<%= form_for @invited_user, :url => user_invitation_path, :html => {:method => :post } do |f| %>
<div class="field form-group">
  <%= f.label :email, "Email Address:"%><br />
  <%= f.email_field :email, :class => 'form-control' %>
  <div class="divider"></div>
  <div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
      <%= f.submit t("devise.invitations.new.submit_button"), :class => 'btn btn-w-lg btn-gap-v btn-default' %>
      <% end %>
    </div>
  </div>
</div>
